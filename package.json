{
  "name": "manchester-io",
  "private": true,
  "main": "api/server.js",
  "scripts": {
    "dev": "concurrently --names \"client,server\" -c \"blue.bgWhite,cyan.bgWhite\" --prefix \"[{name}]\" \"yarn dev:client\" \"yarn dev:server\"",
    "dev:client": "webpack-dev-server --output-public-path=http://sandbox.manchester.io/static/",
    "dev:server": "nodemon -L --watch api --exec babel-node --inspect api/server.js | node_modules/.bin/bunyan",
    "build": "concurrently --names \"client,server\" -c \"blue.bgWhite,cyan.bgWhite\" --prefix \"[{name}]\" \"yarn build:client\" \"yarn build:server\"",
    "build:client": "webpack",
    "build:server": "babel api --out-dir deploy/cookbook/manchesterio/files/default/api/ --copy-files >/dev/null",
    "test": "concurrently --names \"eslint,flow,jest,sass-lint\" -c \"blue.bgWhite,cyan.bgWhite,magenta.bgWhite,black.bgWhite\" --prefix \"[{name}]\" \"yarn test:eslint\" \"yarn test:flow\" \"yarn test:jest\" \"yarn test:sass-lint\"",
    "test-watch": "nodemon -L --watch api --watch frontend --exec yarn test",
    "test:eslint": "eslint client server",
    "test:flow": "flow check",
    "test:jest": "TEST_REPORT_PATH=build/test-results jest -c .jestconfig.json --forceExit",
    "test:sass-lint": "sass-lint -v",
    "deploy": "deploy/deploy.sh",
    "postinstall": "bash -c 'test \"$NODE_ENV\" != \"production\" && rm -rf flow-typed/ && flow-typed install' || true"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.5.0",
    "concurrently": "^3.4.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2 || ^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "flow-bin": "^0.46.0",
    "flow-typed": "^2.0.0",
    "imagemin-webpack-plugin": "^1.4.4",
    "jest-cli": "^20.0.3",
    "jest-junit-reporter": "^1.1.0",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "nodemon": "^1.8.1",
    "on-build-webpack": "^0.1.0",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-hot-loader": "^3.0.0-beta.7",
    "sass-lint": "^1.10.2",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.2",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-subresource-integrity": "^1.0.0-rc.1"
  },
  "dependencies": {
    "bunyan": "^1.8.1",
    "express": "^4.13.3",
    "express-handlebars": "^3.0.0",
    "helmet": "^3.4.0",
    "uuid": "^3.0.1"
  }
}
